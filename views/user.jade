extends templates/base

block content
	h1= title

	div.uk-grid
		form#login-form(method="post" action="/users/login").uk-form.uk-form-horizontal.uk-width-3-5
			div.uk-form-row
				label.uk-form-label Username: 
				div.uk-form-controls 
					input(type="text" name="username" value="" + (post.username ?  post.username : ''))
					
		
			div.uk-form-row
				label.uk-form-label Password: 
				div.uk-form-controls 
					input(type="password" name="password" value="" + (post.password ?  post.password : ''))
		
			div.uk-form-row
				div.uk-form-controls 
					button.uk-button.uk-button-primary#login Login
